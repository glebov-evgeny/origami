/* stylelint-disable no-descending-specificity */

.s-footer {
  padding: var(--a-padding-x4) 0;
  color: var(--color-white);
  background: var(--color-black);

  &__block {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  &__theme {
    width: torem(25);
    height: torem(25);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    outline: none;
    background: transparent;

    &:hover {
      svg {
        transform: rotate(90deg);
      }
    }

    svg {
      transition: 0.3s;

      path {
        fill: var(--color-white);
      }
    }
  }

  &__login {
    cursor: pointer;
    border: none;
    outline: none;
    background: transparent;
    margin-left: torem(8);

    img {
      width: torem(25);
      height: torem(25);
      filter: invert(1);
    }
  }

  &__socials {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
}
/* stylelint-enable no-descending-specificity */
